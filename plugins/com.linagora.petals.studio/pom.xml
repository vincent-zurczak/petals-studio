<project
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" 
		xmlns="http://maven.apache.org/POM/4.0.0" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion> 
	<parent>
		<groupId>com.linagora.petals</groupId>
		<artifactId>parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>
	
	<groupId>com.linagora.petals.plugins</groupId>
	<artifactId>com.linagora.petals.studio</artifactId> 
	<packaging>eclipse-plugin</packaging>
	
	<build>
		<plugins>
			<!-- Update the product Build ID and version in the about text -->
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.6</version>
				<executions>
				
					<!-- Change the plugin.properties -->
					<execution>
						<id>update-plugin-properties</id>
						<phase>validate</phase>
						<configuration>
							<target>
							
								<copy file="${basedir}/plugin.properties" tofile="${basedir}/plugin.properties.backup" />
	    						<tstamp>
									<format property="TODAY" pattern="yyyyMMdd-HHmm" />
								</tstamp>
								<replace file="${basedir}/plugin.properties">
									<replacefilter token="@version@" value="${studio-version} ${studio-version-qualifier}" />
									<replacefilter token="@build-id@" value="${TODAY}" />
								</replace>
						  
							</target>
						</configuration>	
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					
					<!-- Restore the plugin.properties -->
					<execution>
						<id>restore-plugin-properties</id>
						<phase>verify</phase>
						<configuration>
							<target>
								<delete file="${basedir}/plugin.properties" />
								<move file="${basedir}/plugin.properties.backup" tofile="${basedir}/plugin.properties" />
							</target>
						</configuration>	
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-antrun-plugin
										</artifactId>
										<versionRange>
											[1.6,)
										</versionRange>
										<goals>
											<goal>run</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
</project>
