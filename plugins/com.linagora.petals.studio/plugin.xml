   <extension
         id="splash"
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="com.linagora.petals.studio.splash.PetalsSplashHandler"
            id="com.linagora.petals.studio.splashHandler">
      </splashHandler>
      <splashHandlerProductBinding
            productId="com.linagora.petals.studio.product"
            splashId="com.linagora.petals.studio.splashHandler">
      </splashHandlerProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.linagora.petals.studio.PetalsStudioStartup"></startup>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.linagora.petals.common.mainPerspective">
         <hiddenMenuItem
               id="org.eclipse.ui.run">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="navigate">
         </hiddenMenuItem>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=help">
         <menu
               id="com.linagora.petals.studio.weblinks"
               label="Web">
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:com.linagora.petals.studio.weblinks?after=additions">
         <command
               commandId="com.linagora.petals.common.visitWebLink"
               icon="icons/favicon/favicon_doc.png"
               label="Visit Petals wiki"
               style="push">
            <parameter
                  name="url"
                  value="http://doc.petalslink.com">
            </parameter>
         </command>
         <command
               commandId="com.linagora.petals.common.visitWebLink"
               label="Browse Petals Studio&apos;s docs"
               style="push">
            <parameter
                  name="url"
                  value="http://doc.petalslink.com/display/petalsstudio/Petals+Studio">
            </parameter>
         </command>
         <separator
               name="com.linagora.petals.studio.weblinks.separator1"
               visible="true">
         </separator>
         <command
               commandId="com.linagora.petals.common.visitWebLink"
               icon="icons/favicon/favicon_jira.png"
               label="Report a bug"
               style="push">
            <parameter
                  name="url"
                  value="http://jira.petalslink.com/browse/PETALSSTUD">
            </parameter>
         </command>
         <command
               commandId="com.linagora.petals.common.visitWebLink"
               label="Share feedback"
               style="push">
            <parameter
                  name="url"
                  value="http://www.petalslink.com/fr/feedback">
            </parameter>
         </command>
         <command
               commandId="com.linagora.petals.common.visitWebLink"
               icon="icons/favicon/favicon_forum.png"
               label="Ask community&apos;s help!"
               style="push">
            <parameter
                  name="url"
                  value="http://forum.petalslink.com">
            </parameter>
         </command>
         <command
               commandId="com.linagora.petals.common.visitWebLink"
               label="Follow the Petals blogosphere"
               style="push">
            <parameter
                  name="url"
                  value="http://planet.petalslink.com">
            </parameter>
         </command>
         <separator
               name="com.linagora.petals.studio.weblinks.separator2"
               visible="true">
         </separator>
         <command
               commandId="com.linagora.petals.common.visitWebLink"
               icon="icons/favicon/favicon_petalslink.png"
               label="Get professional support"
               style="push">
            <parameter
                  name="url"
                  value="http://www.petalslink.com">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="com.linagora.petals.studio.product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            description="An Eclipse tool set for Petals ESB"
            name="Petals Studio">
         <property
               name="windowImages"
               value="icons/prod/pstudio_16x16.png,icons/prod/pstudio_32x32.png,icons/prod/pstudio_48x48.png,icons/prod/pstudio_64x64.png,icons/prod/pstudio_128x128.png">
         </property>
         <property
               name="aboutImage"
               value="icons/prod/aboutPetalsStudio.png">
         </property>
         <property
               name="appName"
               value="Petals Studio">
         </property>
         <property
               name="productVersion"
               value="%productVersion">
         </property>
         <property
               name="aboutText"
               value="%aboutText">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
         <property
               name="startupMessageRect"
               value="7,252,445,20">
         </property>
         <property
               name="preferenceCustomization"
               value="configuration/plugin_customization.ini">
         </property>
      </product>
   </extension>
</plugin>
